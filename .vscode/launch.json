{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI 서버 디버그",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8001",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true,
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Gradio Spaces 로컬 실행",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/spaces/app.py",
            "justMyCode": true,
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "GRADIO_SERVER_NAME": "0.0.0.0",
                "GRADIO_SERVER_PORT": "7860",
                "API_BASE_URL": "http://localhost:8001"
            },
            "cwd": "${workspaceFolder}/spaces"
        },
        {
            "name": "FastAPI 서버 (reload 없음)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8001"
            ],
            "jinja": true,
            "justMyCode": true,
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "전처리 테스트",
            "type": "debugpy",
            "request": "launch",
            "module": "app.test.test_preprocessing",
            "justMyCode": true,
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "pytest 전체 테스트",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "app/test/",
                "-v"
            ],
            "justMyCode": true,
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "현재 파일 실행",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "justMyCode": true,
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}