# ========================================
# 치매노인 맞춤형 헬스케어 RAG 챗봇 Configuration
# ========================================

# ----------------------------------------
# 기본 설정
# ----------------------------------------
APP_NAME=치매노인 맞춤형 헬스케어 RAG 챗봇
APP_VERSION=0.1.0
DEBUG=false

# ----------------------------------------
# API 서버 설정
# ----------------------------------------
API_HOST=0.0.0.0
API_PORT=8000

# ----------------------------------------
# LLM 설정 (Ollama - 온디바이스)
# ----------------------------------------
OLLAMA_BASE_URL=http://localhost:11434

# 지원 모델:
#   - qwen2.5:1.5b  (빠름, 가벼움)
#   - qwen2.5:3b    (균형, 기본값)
#   - qwen2.5:7b    (정확, 느림)
#   - exaone-1.2b   (한국어 특화, ./scripts/setup_exaone.sh 1.2b 먼저 실행)
#   - exaone-2.4b   (한국어 특화, ./scripts/setup_exaone.sh 2.4b 먼저 실행)
OLLAMA_MODEL=qwen2.5:3b

LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1024

# ----------------------------------------
# OpenAI 설정 (Fallback용 - 선택)
# ----------------------------------------
# Cloud Run에서 Ollama 실패 시 OpenAI 사용
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# ----------------------------------------
# 임베딩 설정 (온디바이스)
# ----------------------------------------
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_DEVICE=cpu

# ----------------------------------------
# ChromaDB 벡터 데이터베이스 설정
# ----------------------------------------
CHROMA_PERSIST_DIR=./data/chroma
CHROMA_COLLECTION_NAME=healthcare_docs
CHROMA_IN_MEMORY=false

# ----------------------------------------
# 대화 기록 설정
# ----------------------------------------
CONVERSATION_COLLECTION_NAME=conversations
MAX_CONVERSATION_HISTORY=10

# ----------------------------------------
# RAG 검색 설정
# ----------------------------------------
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.5

# ----------------------------------------
# 헬스케어 도메인 설정
# ----------------------------------------
PATIENT_PROFILE_COLLECTION=patient_profiles
MEDICATION_REMINDER_ENABLED=true
DAILY_ROUTINE_TRACKING=true

# ----------------------------------------
# Cloud Run 배포 설정
# ----------------------------------------
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=asia-northeast3
SERVICE_NAME=healthcare-rag-chatbot
CLOUD_RUN_URL=

# ----------------------------------------
# HuggingFace Spaces 설정
# ----------------------------------------
HF_TOKEN=your-huggingface-token-here
HF_SPACE_ID=your-username/your-space-name

# ----------------------------------------
# 파인튜닝 모델 설정 (선택)
# ----------------------------------------
FINETUNED_MODEL_PATH=
USE_FINETUNED_MODEL=false
